<!--begin::Body-->
<body id="kt_body" class="app-blank">
  <!--begin::Container-->
  <div class="container pt-5">
    <!--begin::Card-->
    <div class="card flex-row-fluid mb-2">
      <!--begin::Card Body-->
      <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">
        <!--begin::Section-->
        <div class="pb-10">
          <!--begin::Heading-->
          <div class="d-flex flex-stack">
            <!--begin::Title-->
            <h1 class="fw-bold mb-5">Dropzone</h1>
            <!--end::Title-->
            <!--begin::Actions-->
            <a href="./" class="btn btn-sm fw-bold btn-primary">Back to Index</a>
            <!--end::Actions-->
          </div>
          <!--end::Heading-->
          <!--begin::Block-->
          <div class="py-5">Dropzone is a component that provides drag-and-drop file upload with image preview.</div>
          <!--end::Block-->
          <!--begin::Block-->
          <div class="py-5">
            <!--begin::Dropzone-->
            <div data-ref="dropzone"></div>
            <!--end::Dropzone-->
            <!--begin::DataURL of the selected file-->
            <input data-ref="hidden" type="hidden">
            <!--end::DataURL of the selected file-->
          </div>
          <!--end::Block-->
          <!--begin::Code-->
          <div class="py-5">
            <!--begin::Highlight-->
            <div class="highlight">
              <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
              <ul class="nav nav-pills" role="tablist">
                <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#dropzoneHtmlTabPane" role="tab">HTML</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#dropzoneJsTabPane" role="tab">JAVASCRIPT</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane fade show active" id="dropzoneHtmlTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-html" style="max-height:400px">
                      <code class="language-html">&lt;!--begin::Dropzone--&gt;
&lt;div data-ref=&quot;dropzone&quot;&gt;&lt;/div&gt;
&lt;!--end::Dropzone--&gt;
&lt;!--begin::DataURL of the selected file--&gt;
&lt;input data-ref=&quot;hidden&quot; type=&quot;hidden&quot;&gt;
&lt;!--end::DataURL of the selected file--&gt;</code>
                    </pre>
                  </div>
                </div>
                <div class="tab-pane fade" id="dropzoneJsTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-javascript">
                      <code class="language-javascript">import {Dropzone, selectRef} from &#039;metronic-extension&#039;;

const ref = selectRef();
const dropzone = new Dropzone(ref.dropzone, {
  hiddenInputContent: ref.hidden.get(0),
  maxFilesize: 10,
  dictDescriptionMessage: &#039;Files up to 10 MB can be uploaded&#039;,
});
dropzone
  .onAddFile(file =&gt; {
    alert(`From additional handlers. Select ${file.name}`);
  })
  .onCancelFile(() =&gt; {
    alert(&#039;Canceled file selection&#039;);
  });</code>
                    </pre>
                  </div>
                </div>
              </div>
            </div>
            <!--end::Highlight-->
          </div>
          <!--end::Code-->
        </div>
        <!--end::Section-->
      </div>
