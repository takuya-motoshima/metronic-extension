<!--begin::Section-->
<div class="pb-10">
  <!--begin::Heading-->
  <h1 class="anchor fw-bold mb-5" id="overview" data-kt-scroll-offset="100">
    <a href="#overview"></a>Overview
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="my-5">
    Implements a password toggle for the password input element specified by the <code>data-password-toggle</code> attribute.<br>
    An action button must be placed to the right of the password input element in advance.<br>
    See the <a href="#basic" data-kt-scroll-toggle="true">example</a> for details.
  </div>
  <!--end::Block-->
</div>
<!--end::Section-->
