  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>element: string|HTMLElement|JQuery</code>
        <!--begin::Block-->
        <div class="pt-3">
          HTMLElement selector, element, or JQuery object.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>options.showButtonClass?: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          CSS class to be applied to the button that shows the password. Default is &quot;bi bi-eye fs-2&quot;.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>options.hideButtonClass?: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          CSS class to be applied to the button that hides the password. Default is &quot;bi bi-eye-slash fs-2&quot;.
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
  </div>
  <!--end::Block-->
</div>
