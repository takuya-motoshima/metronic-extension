<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<!--begin::Head-->
<head>
  <title>Toast - Metronic Extension</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!--begin::Fonts-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
  <!--end::Fonts-->
  <!--begin::Vendor Stylesheets(used for this page only)-->
  <link href="build/theme/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" type="text/css" />
  <!--end::Vendor Stylesheets-->
  <!--begin::Global Stylesheets Bundle(used by all pages)-->
  <link href="build/theme/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
  <link href="build/theme/css/style.bundle.css" rel="stylesheet" type="text/css" />
  <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank">
  <!--begin::Container-->
  <div class="container pt-5">
    <!--begin::Card-->
    <div class="card flex-row-fluid mb-2">
      <!--begin::Card Body-->
      <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">
        <!--begin::Section-->
        <div class="pb-10">
          <!--begin::Heading-->
          <div class="d-flex flex-stack">
            <!--begin::Title-->
            <h1 class="fw-bold mb-5">Toast</h1>
            <!--end::Title-->
            <!--begin::Actions-->
            <a href="./" class="btn btn-sm fw-bold btn-primary">Back to Index</a>
            <!--end::Actions-->
          </div>
          <!--end::Heading-->
          <!--begin::Block-->
          <div class="py-5">
            <button data-on-success type="button" class="btn btn-primary my-2 me-5">Toggle success toast</button>
            <button data-on-info type="button" class="btn btn-primary my-2 me-5">Toggle info toast</button>
            <button data-on-warning type="button" class="btn btn-primary my-2 me-5">Toggle warning toast</button>
            <button data-on-error type="button" class="btn btn-primary my-2 me-5">Toggle error toast</button>
            <button data-on-with-title type="button" class="btn btn-primary my-2">Toast with title</button>
          </div>
          <!--end::Block-->
          <!--begin::Code-->
          <div class="py-5">
            <!--begin::Highlight-->
            <div class="highlight">
              <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
              <ul class="nav nav-pills" role="tablist">
                <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#toastHtmlTabPane" role="tab">HTML</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#toastJsTabPane" role="tab">JAVASCRIPT</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane fade show active" id="toastHtmlTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-html" style="max-height:400px">
                      <code class="language-html">&lt;button data-on-success type=&quot;button&quot; class=&quot;btn btn-primary my-2 me-5&quot;&gt;Toggle success toast&lt;/button&gt;
&lt;button data-on-info type=&quot;button&quot; class=&quot;btn btn-primary my-2 me-5&quot;&gt;Toggle info toast&lt;/button&gt;
&lt;button data-on-warning type=&quot;button&quot; class=&quot;btn btn-primary my-2 me-5&quot;&gt;Toggle warning toast&lt;/button&gt;
&lt;button data-on-error type=&quot;button&quot; class=&quot;btn btn-primary my-2 me-5&quot;&gt;Toggle error toast&lt;/button&gt;
&lt;button data-on-with-title type=&quot;button&quot; class=&quot;btn btn-primary my-2&quot;&gt;Toast with title&lt;/button&gt;</code>
                    </pre>
                  </div>
                </div>
                <div class="tab-pane fade" id="toastJsTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-javascript">
                      <code class="language-javascript">import {Toast} from &#039;metronic-extension&#039;;

$(&#039;body&#039;)
  .on(&#039;click&#039;, &#039;[data-on-success]&#039;, () =&gt; {
    Toast.success(&#039;Hello, world! This is a toast message.&#039;);
  })
  .on(&#039;click&#039;, &#039;[data-on-info]&#039;, () =&gt; {
    Toast.info(&#039;Hello, world! This is a toast message.&#039;);
  })
  .on(&#039;click&#039;, &#039;[data-on-warning]&#039;, () =&gt; {
    Toast.warning(&#039;Hello, world! This is a toast message.&#039;);
  })
  .on(&#039;click&#039;, &#039;[data-on-error]&#039;, () =&gt; {
    Toast.error(&#039;Hello, world! This is a toast message.&#039;);
  })
  .on(&#039;click&#039;, &#039;[data-on-with-title]&#039;, () =&gt; {
    Toast.success(&#039;Hello, world! This is a toast message.&#039;, &#039;Title test.&#039;);
  });</code>
                    </pre>
                  </div>
                </div>
              </div>
            </div>
            <!--end::Highlight-->
          </div>
          <!--end::Code-->
        </div>
        <!--end::Section-->
      </div>
      <!--end::Card Body-->
    </div>
    <!--end::Card-->
  </div>
  <!--end::Container-->
