<!--begin::Body-->
<body id="kt_body" class="app-blank">
  <!--begin::Container-->
  <div class="container pt-5">
    <!--begin::Card-->
    <div class="card flex-row-fluid mb-2">
      <!--begin::Card Body-->
      <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">
        <!--begin::Section-->
        <div class="pb-10">
          <!--begin::Heading-->
          <h1 class="fw-bold mb-5">Select the elements</h1>
          <!--end::Heading-->
          <!--begin::Block-->
          <div class="py-5">
            Get element with "data-ref" attribute. This function returns an object whose key is the "data-ref" attribute value and whose value is a jQuery object.<br>
            By separating the words in the "data-ref" attribute value with a dot, the result can be a nested object.<br>
            For example, "data-ref="user.name"" will result in "{user: {name: jQuery object}".
          </div>
          <!--end::Block-->
          <!--begin::Block-->
          <div class="py-5">
            <!--begin::Form-->
            <form data-ref="form" autocomplete="off">
              <!--begin::Input group-->
              <div class="fv-row mb-10">
                <!--begin::Label-->
                <label class="fw-semibold fs-6 mb-2">HTML:</label>
                <!--end::Label-->
                <!--begin::Input-->
                <textarea data-ref="html" name="html" data-kt-autosize="true" class="form-control">&lt;input type=&quot;text&quot; data-ref=&quot;name&quot; value=&quot;Tiger Nixon&quot;&gt;
&lt;input type=&quot;radio&quot; data-ref=&quot;drone&quot; value=&quot;huey&quot;&gt;
&lt;input type=&quot;radio&quot; data-ref=&quot;drone&quot; value=&quot;dewey&quot;&gt;
&lt;input type=&quot;text&quot; data-ref=&quot;user.name&quot; value=&quot;Garrett Winters&quot;&gt;
&lt;input type=&quot;radio&quot; data-ref=&quot;user.drone&quot; value=&quot;huey&quot;&gt;
&lt;input type=&quot;radio&quot; data-ref=&quot;user.drone&quot; value=&quot;dewey&quot;&gt;</textarea>
                <!--end::Input-->
              </div>
              <!--end::Input group-->
              <!--begin::Input group-->
              <div class="mb-10">
                <!--begin::Label-->
                <label class="fw-semibold fs-6 mb-2">Result:</label>
                <!--end::Label-->
                <pre data-ref="results" class="w-100 min-h-100px rounded p-5 fs-5" style="background-color: var(--kt-highlight-bg);"></pre>
              </div>
              <!--end::Input group-->
              <!--begin::Actions-->
              <button type="submit" class="btn btn-primary">Selection</button>
              <!--end::Actions-->
            </form>
            <!--end::Form-->
          </div>
          <!--end::Block-->
          <!--begin::Code-->
          <div class="py-5">
            <!--begin::Highlight-->
            <div class="highlight">
              <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
              <ul class="nav nav-pills" role="tablist">
                <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#selectRefHtmlTabPane" role="tab">HTML</a></li>
                <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#selectRefJsTabPane" role="tab">JAVASCRIPT</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane fade show active" id="selectRefHtmlTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-html" style="max-height:400px">
                      <code class="language-html"></code>
                    </pre>
                  </div>
                </div>
                <div class="tab-pane fade" id="selectRefJsTabPane" role="tabpanel">
                  <div class="highlight-code">
                    <pre class="language-javascript">
                      <code class="language-javascript"></code>
                    </pre>
                  </div>
                </div>
              </div>
            </div>
            <!--end::Highlight-->
          </div>
          <!--end::Code-->
        </div>
        <!--end::Section-->
      </div>
      <!--end::Card Body-->
    </div>
    <!--end::Card-->
  </div>
