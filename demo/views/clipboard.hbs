<!--begin::Section-->
<div class="pb-10">
  <!--begin::Heading-->
  <h1 class="anchor fw-bold mb-5" id="overview" data-kt-scroll-offset="100">
    <a href="#overview"></a>Overview
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="my-5">
    Initializes a component that copies the text of the element corresponding to the selector specified in the <code>data-clipboard-target</code> attribute to the clipboard.<br>
    The actual process for copying text to the clipboard is handled by <a href="https://clipboardjs.com/" target="_blank">clipboard.js</a>.
  </div>
  <!--end::Block-->
</div>
<!--end::Section-->
<!--begin::Section-->
<div class="py-10">
  <!--begin::Heading-->
  <h1 class="anchor fw-bold mb-5" id="reference" data-kt-scroll-offset="100">
    <a href="#reference"></a>Reference
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>context: string|HTMLElement|JQuery</code>
        <!--begin::Block-->
        <div class="pt-3">
          A button element with a &quot;data-clipboard-target&quot; attribute that initiates a clipboard copy, or a context element or selector with such an element.
        </div>
        <!--end::Block-->        
      </li>
      <li class="py-2"><code>delay: number</code>
        <!--begin::Block-->
        <div class="pt-3">
          Time (in milliseconds) to switch from the copy complete icon to the pre-copy icon. Default is 3000.
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
  </div>
  <!--end::Block-->
</div>
<!--end::Section-->
<!--begin::Section-->
<div class="py-10">
