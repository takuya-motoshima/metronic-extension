        <!--begin::Button-->
        <button id="button" class="btn btn-icon btn-light" data-clipboard-target="#target">
          <i class="ki-duotone ki-copy fs-2"></i>
        </button>
        <!--end::Button-->
      </div>
      <!--end::Input group-->
    </div>
  </div>
  <!--end::Block-->
