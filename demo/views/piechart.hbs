        <!--begin::Body-->
        <tbody>
          <tr>
            <td>
              <code>public instance: ApexCharts|undefined</code>
            </td>
            <td>
              Read-only ApexCharts instance.
            </td>
          </tr>
        </tbody>
        <!--end::Body-->
      </table>
      <!--end::Table-->
    </div>
    <!--end::Table wrapper-->
  </div>
  <!--end::Block-->
</div>
