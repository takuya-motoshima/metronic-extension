{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declarationDir": "./types",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "node_modules/clipboard/src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
 ]
}